@{
    ViewData["Title"] = "Home";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="display-4 mb-4">Welcome to TeamTaskPro</h1>
        <p class="lead mb-4">Streamline your team's workflow with our powerful task management solution.</p>
        <div class="d-flex gap-3">
            <a asp-controller="Tasks" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Task
            </a>
            <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-list-task me-2"></i>View All Tasks
            </a>
        </div>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <div class="p-4 bg-light rounded-3 w-100 text-center">
            <i class="bi bi-kanban text-primary" style="font-size: 8rem;"></i>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-clock-history text-primary fs-4 me-2"></i>
                    <h5 class="card-title mb-0">Recent Tasks</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="1" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Update user interface</h6>
                                <small class="text-muted">Frontend</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">Open</span>
                        </div>
                    </a>
                    <a asp-controller="Tasks" asp-action="Details" asp-route-id="2" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Fix login bug</h6>
                                <small class="text-muted">Backend</small>
                            </div>
                            <span class="badge bg-warning rounded-pill">In Progress</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-graph-up text-success fs-4 me-2"></i>
                    <h5 class="card-title mb-0">Task Statistics</h5>
                </div>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span>Open Tasks</span>
                        <span class="text-primary">12</span>
                    </div>
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar bg-primary" style="width: 40%"></div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span>In Progress</span>
                        <span class="text-warning">8</span>
                    </div>
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar bg-warning" style="width: 30%"></div>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Completed</span>
                        <span class="text-success">15</span>
                    </div>
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar bg-success" style="width: 60%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-people text-info fs-4 me-2"></i>
                    <h5 class="card-title mb-0">Team Activity</h5>
                </div>
                <div class="timeline">
                    <div class="timeline-item pb-3">
                        <small class="text-muted">2 hours ago</small>
                        <p class="mb-0">John assigned a new task to Sarah</p>
                    </div>
                    <div class="timeline-item pb-3">
                        <small class="text-muted">4 hours ago</small>
                        <p class="mb-0">Mike completed the database migration</p>
                    </div>
                    <div class="timeline-item">
                        <small class="text-muted">Yesterday</small>
                        <p class="mb-0">Emma created a new project milestone</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="row g-4">
                    <div class="col-md-3">
                        <a asp-controller="Tasks" asp-action="Create" class="text-decoration-none">
                            <div class="p-3 border rounded text-center hover-shadow">
                                <i class="bi bi-plus-circle text-primary fs-3"></i>
                                <p class="mb-0 mt-2">New Task</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Home" asp-action="Reports" class="text-decoration-none">
                            <div class="p-3 border rounded text-center hover-shadow">
                                <i class="bi bi-file-earmark-text text-info fs-3"></i>
                                <p class="mb-0 mt-2">Generate Report</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Home" asp-action="Team" class="text-decoration-none">
                            <div class="p-3 border rounded text-center hover-shadow">
                                <i class="bi bi-people text-success fs-3"></i>
                                <p class="mb-0 mt-2">Team Members</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Home" asp-action="Settings" class="text-decoration-none">
                            <div class="p-3 border rounded text-center hover-shadow">
                                <i class="bi bi-gear text-secondary fs-3"></i>
                                <p class="mb-0 mt-2">Settings</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add hover effect to quick action cards
        document.querySelectorAll('.hover-shadow').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 4px 6px -1px rgba(0, 0, 0, 0.1)';
                this.style.transition = 'all 0.2s ease';
            });

            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = 'none';
            });
        });
    </script>
} 