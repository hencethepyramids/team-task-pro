@model TaskItem
@{
    ViewData["Title"] = "Create Task";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Create Task</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter task title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter task description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Priority" class="form-label">Priority</label>
                            <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<TaskPriority>()">
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Category" class="form-label">Category</label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Select Category</option>
                                <option>Frontend</option>
                                <option>Backend</option>
                                <option>Testing</option>
                                <option>Documentation</option>
                                <option>Design</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label d-block">Attachments</label>
                        <div class="dropzone-container border rounded p-4 text-center">
                            <i class="bi bi-cloud-upload fs-2 text-muted"></i>
                            <p class="mb-0">Drag and drop files here or click to browse</p>
                            <small class="text-muted">Maximum file size: 10MB</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check2 me-2"></i>Create Task
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tips</h5>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        Be specific with the task title
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        Include relevant details in description
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        Set appropriate priority level
                    </li>
                    <li>
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        Attach relevant files if needed
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Add form validation and file upload handling here
    </script>
} 