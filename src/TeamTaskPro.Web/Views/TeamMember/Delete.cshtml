@model TeamTaskPro.Web.Models.TeamMember

@{
    ViewData["Title"] = "Delete Team Member";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Team Member</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this team member?</h3>
                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@Model.Email</dd>

                            <dt class="col-sm-3">Department</dt>
                            <dd class="col-sm-9">@(Model.Department ?? "Not assigned")</dd>

                            <dt class="col-sm-3">Position</dt>
                            <dd class="col-sm-9">@(Model.Position ?? "Not assigned")</dd>
                        </dl>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 